<% if current_announcement.exists? && !announcement_hidden?(current_announcement) %>
  <div id="announcement" class="alert alert-success alert-announcement">
    <%# FIXME: replace with external JS %>
    <%= link_to "&#215;".html_safe,
          :onclick => "hideAnnouncement('announcement_#{current_announcement.created_at}')",
          :class => 'close' %>
    <div><%= current_announcement.body.html_safe %></div>
  </div>
<% end %>
